@model PagedList.IPagedList<Processo.Entidades.HistoricoCompraServico>
@using PagedList.Mvc;

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1 toppad">
            <div class="panel panel-">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        <span style="font-size:25px; font-weight:bold;">Histórico de Compra de Serviços</span>
                    </h1>
                </div>
                <div class="panel-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table id="mytable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Serviço</th>
                                                <th>Academia</th>
                                                <th>Data</th>
                                                <th>Valor</th>
                                            </tr>
                                        </thead>
                                       <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Chave</td>
                                                    <td id="ServicoNome">@item.NomeServico</td>
                                                    <td id="AcademiaNome">@item.NomePessoaJuridica</td>
                                                    <td id="Data">@item.Data</td>
                                                    <td id="ValorServico">@item.Valor</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="clearfix"></div>
                                    @Html.PagedListPager(Model, page => Url.Action("Listar", new { page, }))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>