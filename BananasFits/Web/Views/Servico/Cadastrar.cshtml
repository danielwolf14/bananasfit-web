@model Web.ViewModels.CadastroServicoViewModel

@{
    Layout = null;
}

<div class="modal fade" id="inserir" tabindex="-1" role="dialog" aria-labelledby="inserir" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Cadastrar", "Servico", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title custom_align" id="Heading">Inserir Serviço</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        @Html.TextBoxFor(e => e.Nome, new { @class = "form-control input-sm", placeholder = "Nome" })
                        @Html.ValidationMessageFor(e => e.Nome)
                    </div>
                    <div class="form-group">
                        <input type="file" name="img" id="img" class="form-control" />
                    </div>

                </div>
                <div class="modal-footer ">
                    <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Inserir</button>
                </div>
            }
        </div>

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



